<?xml version="1.0"?>
<config>
    <sections>
        <yeah_sync_section>
            <label>Yeah!Commerce Sync</label>
            <tab>general</tab>
            <sort_order>501</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>

            <groups>
                <yeah_sync_group translate="label">
                    <label>Integration Settings</label>
                    <sort_order>10</sort_order>
                    <expanded>1</expanded>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <secret_key translate="label">
                            <label>Secret Key</label>
                            <comment>
                                &lt;span style="color:red"&gt;Must be set!&lt;/span&gt;
                                Get it from CMS section at your &lt;nobr&gt;Yeah!Commerce&lt;/nobr&gt; account&lt;br/&gt;&lt;br/&gt;
                                &lt;span style="color:green"&gt;Please&lt;/span&gt;
                                don't forget to check CMS section at your &lt;nobr&gt;Yeah!Commerce&lt;/nobr&gt; account.
                            </comment>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </secret_key>
                        <redirect_check translate="label">
                            <label>Enable mobile redirect</label>
                            <comment>
                                You can turn on redirecting from your store pages to &lt;nobr&gt;Yeah!Commerce application when opened on mobile devices
                            </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </redirect_check>                        
                    </fields>
                </yeah_sync_group>
            </groups>
        </yeah_sync_section>
    </sections>
</config>
